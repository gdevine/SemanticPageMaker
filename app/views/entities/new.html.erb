<% provide(:title, 'New Entity') %>
<h1>New Entity</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@entity) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :exposeAs %>
      <%= f.text_field :exposeAs %>

      <%= f.label :freetext %>
      <%= f.check_box :freetext %>
      
      <%= f.fields_for :entity_fields do |ef| %>
        <%= ef.label :field_id, 'Field' %>
        <%= ef.collection_select(:field_id, Field.all, :id, :name, include_blank:true) %>
        
        <%= ef.label :multiple %>
        <%= ef.check_box :multiple %>
        
        <%= ef.label :exposeAs %>
        <%= ef.text_field :exposeAs %>
      <% end %>
      
      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
      
    <% end %>
  </div>
</div>