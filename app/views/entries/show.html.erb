<% provide(:title, 'Entry View') %>
<% provide(:pageheading, @entity.name+' Entry') %>

<!-- Add edit/delete buttons if current user -->
<% if current_user?(@entry.creator) %> 
  <div class="row"> 
	  <div class="col-xs-12 col-sm-2 col-sm-push-10">
		<a class="btn btn-block btn-default" data-toggle="dropdown" href="#" id="options_button">
		  Options
		  <span class="caret"></span>
		</a>
		<ul class="dropdown-menu">
		    <li><%= link_to "Edit Entry", :action => 'edit', :entity_id => @entity.id %></li>
		    <li><%= link_to "Delete Entry", @entry, :method => :delete, data: { confirm: "Are you sure?" }, :class=>"redtext" %></li>
		</ul>
	  </div>
  </div>
<% end %>

<div typeof=<%= @entity.typeof %>>
	<div class="topspace50">
		<div class="row">  
		  <div class="col-md-offset-4 col-md-2">
		    <h4 class="text-left">Entry ID</h4>
		  </div>
		  <div class="col-md-2">
		    <h4 class="text-muted"><%= @entry.id %></h4>
		  </div>
		</div>
		
		<div class="row">  
		  <div class="col-md-offset-4 col-md-2">
		    <h4 class="text-left">Entry Type</h4>
		  </div>
		  <div class="col-md-2">
		    <h4 class="text-muted"><%= @entity.name %></h4>
		  </div>
		</div>
		
		<div class="row">  
		  <div class="col-md-offset-4 col-md-2">
		    <h4 class="text-left">Date Created</h4>
		  </div>
		  <div class="col-md-2">
		    <h4 class="text-muted"><span property="http://purl.org/dc/terms/created"><%= @entry.created_at %></span></h4>
		  </div>
		</div>
		
	</div>
	
	
	<legend class="topspace50">Fields</legend>
	
	<% for field in @fieldlist %>
	  <div class="row">  
		<div class="col-md-offset-4 col-md-2">
		  <h4><%= field['label'] %></h4>
		</div>
		<div class="col-md-2">
		  <h4 class="text-muted" property="<%= field['predicate'] %>"><%= field['answer'] %></h4>
		</div>
	  </div>
	<% end%>
	
	
	<legend class="topspace50">Links</legend>
	
	<% for link in @entitylist %>
	  <div class="row">  
		<div class="col-md-offset-4 col-md-2">
		  <h4><%= link['label'] %></h4>
		</div>
		<div class="col-md-2">
		  <h4 class="text-muted"><%= link_to link['answer'].link_id, entry_url(link['answer'].link_id), 'property'=>link['predicate'] %></h4>
		</div>
	  </div>
	<% end%>
</div>

