<% provide(:title, 'New Field') %>
<h1>New Field</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@field) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :fieldtype %>
      <%= f.text_field :fieldtype %>
      
      <%= f.label :property %>
      <%= f.text_field :property %>

      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>