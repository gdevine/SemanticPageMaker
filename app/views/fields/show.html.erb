<% provide(:title, 'Field View') %>
<% provide(:pageheading, 'Field '+ @field.name) %>

<!-- Add edit/delete buttons if current user -->
<% if current_user?(@field.creator) %> 
  <div class="row"> 
	  <div class="col-xs-12 col-sm-2 col-sm-push-10">
		<a class="btn btn-block btn-default" data-toggle="dropdown" href="#" id="options_button">
		  Options
		  <span class="caret"></span>
		</a>
		<ul class="dropdown-menu">
		    <li><%= link_to "Edit Field", :action => 'edit' %></li>
		    <li><%= link_to "Delete Field", @field, :method => :delete, data: { confirm: "Are you sure?" }, :class=>"redtext" %></li>
		</ul>
	  </div>
  </div>
<% end %>

<div class="topspace50">
	<div class="row">  
	  <div class="col-md-offset-4 col-md-2">
	    <h4 class="text-left">Field ID</h4>
	  </div>
	  <div class="col-md-2">
	    <h4 class="text-muted text-center"><%= @field.id %></h4>
	  </div>
	</div>
	
	<div class="row">  
	  <div class="col-md-offset-4 col-md-2">
	    <h4 class="text-left">Field Name</h4>
	  </div>
	  <div class="col-md-2">
	    <h4 class="text-muted text-center"><%= @field.name %></h4>
	  </div>
	</div>
	
	<div class="row">  
	  <div class="col-md-offset-4 col-md-2">
	    <h4 class="text-left">Field Type</h4>
	  </div>
	  <div class="col-md-2">
	    <h4 class="text-muted text-center"><%= @field.fieldtype %></h4>
	  </div>
	</div>
	
	<div class="row">  
	  <div class="col-md-offset-4 col-md-2">
	    <h4 class="text-left">Property</h4>
	  </div>
	  <div class="col-md-2">
	    <h4 class="text-muted text-center"><%= @field.property %></h4>
	  </div>
	</div>
</div>
