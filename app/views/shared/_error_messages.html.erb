<% if object.errors.any? %>
  
  <div class="row">
  	<div class="col-md-offset-3 col-md-6">
	  <div id="error_explanation" class="alert alert-danger">
	    The form contains <%= pluralize(object.errors.count, "error") %>:
	    <ul>
	    <% object.errors.full_messages.each do |msg| %>
	      <li>* <%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	</div>
  </div>
<% end %>